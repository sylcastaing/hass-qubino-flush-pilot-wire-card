  "dependencies": {
    "custom-card-helpers": "1.6.4",
    "home-assistant-js-websocket": "5.1.2",
    "lit-element": "2.3.1",
    "lit-html": "1.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/plugin-proposal-class-properties": "7.8.3",
